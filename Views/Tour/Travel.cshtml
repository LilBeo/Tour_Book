@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta name="viewport" content="width=device-width" />
    <title></title>
    <!-- Fontawesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" />
    <link href="https://fonts.googleapis.com/css2?family=Yesteryear&display=swap" rel="stylesheet">
    <!-- Style -->
    <link rel="stylesheet" href="~/Content/assets/css/base.css" />
    <link rel="stylesheet" href="~/Content/assets/css/styleTravel.css?v=5" />
</head>
<body>
    <div class="container">
        <!--All trang-->
        <div class="main-slider">
            <!--Từ header đến đầu footer-->
            <div class="navigation">
                <!--Header-->
                <div class="logo">
                    <a href="/"><img src="~/Content/assets/img/Logo/logo (1).png" alt="Logo" /></a>
                </div>
                <div class="menu">
                    <ul class="menu-list">
                        <li class="menu-item"><a href="@Url.Action("Home", "Tour")">Home</a></li>
                        <li class="dropdown">
                            <a href="">Packages</a>
                            <ul class="submenu">
                                <li>Honeymoon Package</li>
                                <li>Travel Package</li>
                                <li>Self-Select Service</li>
                            </ul>
                        </li>
                        <li class="menu-item"><a href="@Url.Action("Travel", "Tour")">Tour</a></li>
                        <li class="menu-item"><a href="@Url.Action("Aboutus", "Tour")">About Us</a></li>
                        <li class="menu-item"><a href="">Contact</a></li>
                        <li class="dropdown">
                            <a href="">Languages</a>
                            <ul class="submenu">
                                <li>Tiếng Việt</li>
                                <li>English</li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="action-bar">
                    <button class="action-btn">
                        Liên hệ <i class="fa-solid fa-phone"></i>
                    </button>
                    <button class="action-btn">
                        Đăng nhập <i class="fa-regular fa-circle-user"></i>
                    </button>
                </div>
            </div>
            <div class="search-tour">
                <p>SEARCH TOUR</p>
                <h1>Travel With Us</h1>
            </div>
        </div>
        <div class="travel-menu">
            <button class="menu-button"><i class="fa-solid fa-calendar-days"></i>Lịch</button>
            <button class="menu-button"><i class="fa-solid fa-down-long"></i>Giá từ thấp đến cao</button>
            <button class="menu-button"><i class="fa-solid fa-up-long"></i>Giá từ cao đến thấp</button>
            <button class="menu-button"><i class="fa-regular fa-pen-to-square"></i>Tên (A-Z)</button>
        </div>
        <div class="travel-wrapper">
            <div class="travel-section">
                    <a href="@Url.Action("Detail", "Information")" class="box-section">
                        <img src="~/Content/assets/img-travel/Switzerland.png">
                        <div class="taskbar">
                            <div class="taskbar-item"><i class="fa-solid fa-calendar-days"></i>12, September 2025</div>
                            <div class="taskbar-item"><i class="fa-solid fa-people-group"></i>120+ People</div>
                        </div>
                        <h2>Switzerland</h2>
                        <p>Qui Tempore Voluptate Qui Quia Commodi Rem Praesentium Alias Et.</p>
                        <div class="feedback">
                            <span class="price">1,100$</span>
                            <span class="rating"><i class="fa-solid fa-star"></i> 5.0</span>
                        </div>
                    </a>
                <div class="box-section">
                    <img src="~/Content/assets/img-travel/Berlin.png">
                    <div class="taskbar">
                        <div class="taskbar-item"><i class="fa-solid fa-calendar-days"></i>12, September 2025</div>
                        <div class="taskbar-item"><i class="fa-solid fa-people-group"></i>120+ People</div>
                    </div>
                    <h2>Berlin</h2>
                    <p>Qui Tempore Voluptate Qui Quia Commodi Rem Praesentium Alias Et.</p>
                    <div class="feedback">
                        <span class="price">1,100$</span>
                        <span class="rating"><i class="fa-solid fa-star"></i> 5.0</span>
                    </div>
                </div>
                <div class="box-section">
                    <img src="~/Content/assets/img-travel/Maldives.png">
                    <div class="taskbar">
                        <div class="taskbar-item"><i class="fa-solid fa-calendar-days"></i>12, September 2025</div>
                        <div class="taskbar-item"><i class="fa-solid fa-people-group"></i>120+ People</div>
                    </div>
                    <h2>Maldives</h2>
                    <p>Qui Tempore Voluptate Qui Quia Commodi Rem Praesentium Alias Et.</p>
                    <div class="feedback">
                        <span class="price">1,100$</span>
                        <span class="rating"><i class="fa-solid fa-star"></i> 5.0</span>
                    </div>
                </div>
                <div class="box-section">
                    <img src="~/Content/assets/img-travel/Torronto.png">
                    <div class="taskbar">
                        <div class="taskbar-item"><i class="fa-solid fa-calendar-days"></i>12, September 2025</div>
                        <div class="taskbar-item"><i class="fa-solid fa-people-group"></i>120+ People</div>
                    </div>
                    <h2>Torronto</h2>
                    <p>Qui Tempore Voluptate Qui Quia Commodi Rem Praesentium Alias Et.</p>
                    <div class="feedback">
                        <span class="price">1,100$</span>
                        <span class="rating"><i class="fa-solid fa-star"></i> 5.0</span>
                    </div>
                </div>
                <div class="box-section">
                    <img src="~/Content/assets/img-travel/Baku.png">
                    <div class="taskbar">
                        <div class="taskbar-item"><i class="fa-solid fa-calendar-days"></i>12, September 2025</div>
                        <div class="taskbar-item"><i class="fa-solid fa-people-group"></i>120+ People</div>
                    </div>
                    <h2>Baku</h2>
                    <p>Qui Tempore Voluptate Qui Quia Commodi Rem Praesentium Alias Et.</p>
                    <div class="feedback">
                        <span class="price">1,100$</span>
                        <span class="rating"><i class="fa-solid fa-star"></i> 5.0</span>
                    </div>
                </div>
                <div class="box-section">
                    <img src="~/Content/assets/img-travel/Vietnam.jpg">
                    <div class="taskbar">
                        <div class="taskbar-item"><i class="fa-solid fa-calendar-days"></i>12, September 2025</div>
                        <div class="taskbar-item"><i class="fa-solid fa-people-group"></i>120+ People</div>
                    </div>
                    <h2>VietNamese</h2>
                    <p>Qui Tempore Voluptate Qui Quia Commodi Rem Praesentium Alias Et.</p>
                    <div class="feedback">
                        <span class="price">1,100$</span>
                        <span class="rating"><i class="fa-solid fa-star"></i> 5.0</span>
                    </div>
                </div>
            </div>
            <aside class="plan-box">
                <h3>Lên kế hoạch cho<br />chuyến du lịch của bạn</h3>
                <form class="plan-form">
                    <input type="text" placeholder="Tìm Tour" />
                    <input type="text" placeholder="Đến?" />
                    <input type="text" placeholder="Ngày?" />
                    <div class="price-filter">
                        <label for="price-range">Lọc Theo Giá</label>
                        <input type="range" min="12" max="3600" value="1200" id="price-range" />
                        <p>Giá: $12 – $3600</p>
                    </div>
                    <button type="submit" class="book-now">Đặt ngay</button>
                </form>
            </aside>
        </div>
    </div>

    <div class="footer">
        <div class="logo">
            <a href="#"><img src="~/Content/assets/img-register/logo (2).png" alt="Logo" /></a>
            <p>Travel helps companies manage payments easily.</p>
            <div class="social-items">
                <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                <a href="#"><i class="fa-brands fa-facebook-messenger"></i></a>
                <a href="#"><i class="fa-brands fa-twitter"></i></a>
                <a href="#"><i class="fa-solid fa-infinity"></i></a>
            </div>
        </div>
        <div class="list-box">
            <div class="list1">
                <p>Company</p>
                <ul>
                    <li>About Us</li>
                    <li>Careers</li>
                    <li>Blog</li>
                    <li>Pricing</li>
                </ul>
            </div>
            <div class="list2">
                <p>Destinations</p>
                <ul>
                    <li>Maldives</li>
                    <li>Los Angerlas</li>
                    <li>Las Vegas</li>
                    <li>Torronto</li>
                </ul>
            </div>
        </div>
        <div class="subscribe-bar">
            <p class="p-top">Join Our Newsletter</p>
            <div class="bar">
                <input type="email" placeholder="Your email address">
                <button class="subscribe">Subscribe</button>
            </div>
            <p class="p-bottom">* Will send you weekly updates for your better tour packages.</p>
        </div>
        <div class="img-bottom">
            <img src="~/Content/assets/img-register/Footer img.png">
        </div>
    </div>
    <div class="copyright">
        <p>&copy; Copyright &#64 BAD. All Rights Reserved.</p>
    </div>
</body>
</html>
