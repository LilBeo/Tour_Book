@{
    Layout = null;
}

<!DOCTYPE html>

<html>
<head>
    <meta charset="UTF-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title></title>
    <!-- Fontawesome -->
    <link rel="stylesheet"
          href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/7.0.0/css/all.min.css" />
    <!-- Style -->
    <link rel="stylesheet" href="~/Content/assets/css/base.css" />
    <link rel="stylesheet" href="~/Content/assets/css/styleLogin.css?v=3" />
</head>
<body>
    <div class="container">
        <div class="main-slider">
            <div class="navigation">
                <div class="logo">
                    <a href="/"><img src="~/Content/assets/img-login/logo.png" alt="Logo" /></a>
                </div>
                <div class="menu">
                    <ul class="menu-list">
                        <li class="menu-item"><a href="">Home</a></li>
                        <li class="dropdown">
                            <a href="">Packages</a>
                            <ul class="submenu">
                                <li>Honeymoon Package</li>
                                <li>Travel Package</li>
                                <li>Self-Select Service</li>
                            </ul>
                        </li>
                        <li class="menu-item"><a href="@Url.Action("Travel", "Tour")">Tour</a></li>
                        <li class="menu-item"><a href="@Url.Action("Aboutus", "Tour")">About Us</a></li>
                        <li class="menu-item"><a href="">Contact</a></li>
                        <li class="dropdown">
                            <a href="">Languages</a>
                            <ul class="submenu">
                                <li>Tiếng Việt</li>
                                <li>English</li>
                            </ul>
                        </li>
                    </ul>
                </div>
                <div class="action-bar">
                    <button class="action-btn">
                        Liên hệ <i class="fa-solid fa-phone"></i>
                    </button>
                    <button class="action-btn">
                        Đăng nhập <i class="fa-regular fa-circle-user"></i>
                    </button>
                </div>
            </div>
            <div class="login-bar">
                <div class="login-box">
                    <h2>Đăng nhập</h2>
                    <section>
                        <label for="email">Nhập tài khoản:</label>
                        <input type="text" placeholder="">

                        <label for="password">Nhập mật khẩu:</label>
                        <input type="text" placeholder="">

                        <div class="form-links">
                            <a href="@Url.Action("Register", "Auth")">Tạo tài khoản</a>
                            <a href="@Url.Action("Register", "Auth")">Quên mật khẩu?</a>
                        </div>


                    </section>
                    <button type="submit">Đăng nhập</button>
                    <div class="social-login">
                        <div class="icons">
                            <img src="~/Content/assets/img-login/gg.png" alt="Google">
                            <img src="~/Content/assets/img-login/meta-logo-facebook.jpg" alt="Meta">
                            <img src="~/Content/assets/img-login/apple.png" alt="Apple">
                        </div>
                    </div>
                </div>
            </div>
        </div>
        <!--Footer-->
        <div class="footer">
            <div class="logo">
                <a href="#"><img src="~/Content/assets/img-login/logo (1).png" alt="Logo" /></a>
                <p>Travel helps companies manage payments easily.</p>
                <div class="social-items">
                    <a href="#"><i class="fa-brands fa-linkedin-in"></i></a>
                    <a href="#"><i class="fa-brands fa-facebook-messenger"></i></a>
                    <a href="#"><i class="fa-brands fa-twitter"></i></a>
                    <a href="#"><i class="fa-solid fa-infinity"></i></a>
                </div>
            </div>
            <div class="list-box">
                <div class="list1">
                    <p>Company</p>
                    <ul>
                        <li>About Us</li>
                        <li>Careers</li>
                        <li>Blog</li>
                        <li>Pricing</li>
                    </ul>
                </div>
                <div class="list2">
                    <p>Destinations</p>
                    <ul>
                        <li>Maldives</li>
                        <li>Los Angerlas</li>
                        <li>Las Vegas</li>
                        <li>Torronto</li>
                    </ul>
                </div>
            </div>
            <div class="subscribe-bar">
                <p class="p-top">Join Our Newsletter</p>
                <div class="bar">
                    <input type="email" placeholder=" Your email address">
                    <button class="subscribe">Subscribe</button>
                </div>
                <p class="p-bottom">* Will send you weekly updates for your better tour packages.</p>
            </div>
            <div class="img-bottom">
                <img src="~/Content/assets/img-register/Footer img.png">
            </div>
        </div>
        <div class="copyright">
            <p>&copy; Copyright &#64 BAD. All Rights Reserved.</p>
        </div>
    </div>
</body>
</html>
